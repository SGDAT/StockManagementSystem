@model IEnumerable<StockManagementSystem.Data.ViewModels.StockViewModel>

@{
    ViewData["Title"] = "Stocks";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Stocks</h2>

<p>
    <a class="btn btn-success" asp-controller="Batches" asp-action="Index">View Batches</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fruit)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Variety)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fruit)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Variety)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>

                </td>
            </tr>
        }
    </tbody>
</table>
